<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fruitImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@color/black"
            app:civ_border_color="#03A9F4"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fruitName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Apple"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fruitImg"
            app:layout_constraintTop_toTopOf="@+id/fruitImg" />

        <TextView
            android:id="@+id/fruitQnt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quantity: 230"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/fruitPrice"
            app:layout_constraintEnd_toEndOf="@+id/fruitName"
            app:layout_constraintStart_toStartOf="@+id/fruitName"
            app:layout_constraintTop_toBottomOf="@+id/fruitName" />

        <TextView
            android:id="@+id/fruitPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Price: $3"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/fruitImg"
            app:layout_constraintEnd_toEndOf="@+id/fruitQnt"
            app:layout_constraintStart_toStartOf="@+id/fruitQnt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>